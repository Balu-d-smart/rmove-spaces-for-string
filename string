#include <stdio.h>
#include<string.h>
#include<stdlib.h>
int main()
{
char arr[100];
int i,len=0,j;
gets(arr);
printf("the string which given by user is %s \n",arr);
for(i=0;i<='\0';i++)
 {
     len=strlen(arr);
 }
 printf("le %d\n",len);
 for (i=0;i<len;i++)
 {
     if(arr[i]==' ')
     {
         arr[i]=arr[i+1];

     }
 }
 printf("the string without spaces %s",arr);
}
